<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>dbName</param-name>
        <param-value>CyberSecureTeachingDB</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>j5warner</param-value>
    </context-param>
    <context-param>
        <param-name>dbPass</param-name>
        <param-value>password</param-value>
    </context-param>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/Admin/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <listener>
        <listener-class>listeners.NewContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewUsersServlet</servlet-name>
        <servlet-class>com.ViewUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewUsersScoresServlet</servlet-name>
        <servlet-class>com.ViewUsersScoresServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MobileLoginServlet</servlet-name>
        <servlet-class>com.MobileLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionsServlet</servlet-name>
        <servlet-class>com.QuestionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScoreUpdateServlet</servlet-name>
        <servlet-class>com.ScoreUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewQuestionsServlet</servlet-name>
        <servlet-class>com.ViewQuestionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/Admin/Dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MobileLoginServlet</servlet-name>
        <url-pattern>/MobileLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionsServlet</servlet-name>
        <url-pattern>/QuestionsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScoreUpdateServlet</servlet-name>
        <url-pattern>/ScoreUpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewUsersServlet</servlet-name>
        <url-pattern>/Admin/ViewUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewQuestionsServlet</servlet-name>
        <url-pattern>/Admin/ViewQuestions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewUsersScoresServlet</servlet-name>
        <url-pattern>/Admin/ViewUsersScores</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
</web-app>
